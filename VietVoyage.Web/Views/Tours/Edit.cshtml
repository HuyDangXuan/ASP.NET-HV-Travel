@{
    ViewData["Title"] = "Chỉnh sửa Tour";
}

<style type="text/tailwindcss">
    @@layer components {
        .input-field {
            @@apply w-full bg-[#f6f8f8] dark:bg-slate-900 border-none rounded-2xl h-14 px-4 text-[#111718] dark:text-white font-semibold focus:ring-2 focus:ring-primary/50 transition-all placeholder:text-[#618389]/50;
        }
        .section-card {
            @@apply bg-white dark:bg-slate-800 rounded-2xl border border-[#f0f4f4] dark:border-white/10 p-6 shadow-sm space-y-6;
        }
        .label-text {
            @@apply text-[#111718] dark:text-white text-sm font-bold uppercase tracking-wider mb-2 block;
        }
    }
</style>

<div class="pb-24">
    <div class="flex flex-col gap-1 mb-10">
        <nav class="flex items-center gap-2 text-sm text-slate-500">
            <a class="hover:text-primary transition-colors" href="@Url.Action("Index", "Dashboard")">Trang Chủ</a>
            <span class="material-symbols-outlined text-[16px]">chevron_right</span>
            <a class="hover:text-primary transition-colors" asp-action="Index">Tours</a>
            <span class="material-symbols-outlined text-[16px]">chevron_right</span>
            <span class="text-slate-900 dark:text-white font-medium">Chỉnh sửa Tour</span>
        </nav>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Chỉnh sửa Tour</h1>
        <p class="text-slate-500 dark:text-gray-400 mt-1">Cập nhật thông tin chi tiết, giá cả và lịch trình cho tour của bạn.</p>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
        <div class="lg:col-span-7 space-y-8">
            <section class="section-card">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-primary">info</span>
                    <h2 class="text-[#111718] dark:text-white text-xl font-bold">Thông tin cơ bản</h2>
                </div>
                <div class="space-y-6">
                    <div>
                        <label class="label-text">Tên Tour</label>
                        <input class="input-field" placeholder="Ví dụ: Khám phá Vịnh Hạ Long 2 ngày 1 đêm" type="text" value="Ha Giang Loop Adventure" />
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="label-text">Điểm đến</label>
                            <input class="input-field" placeholder="Ví dụ: Hạ Long, Quảng Ninh" type="text" value="Hà Giang" />
                        </div>
                        <div>
                            <label class="label-text">Danh mục</label>
                            <select class="input-field appearance-none">
                                <option value="">Chọn danh mục</option>
                                <option value="beach">Du lịch biển</option>
                                <option value="mountain" selected>Du lịch núi</option>
                                <option value="luxury">Nghỉ dưỡng sang trọng</option>
                                <option value="culture">Văn hóa &amp; Lịch sử</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <label class="label-text">Mô tả ngắn</label>
                        <textarea class="input-field h-32 py-4 resize-none" placeholder="Viết một đoạn giới thiệu ngắn gọn về tour này...">Khám phá vẻ đẹp hùng vĩ của vùng cao nguyên đá Đồng Văn qua hành trình Hà Giang Loop đầy thú vị.</textarea>
                    </div>
                    <div>
                        <label class="label-text">Hình ảnh đại diện</label>
                        <div class="border-2 border-dashed border-[#dbe4e6] dark:border-white/10 rounded-2xl p-8 flex flex-col items-center justify-center gap-3 bg-[#f6f8f8]/50 dark:bg-white/5 hover:bg-primary/5 transition-colors cursor-pointer group">
                            <span class="material-symbols-outlined text-4xl text-[#618389] group-hover:text-primary transition-colors">add_photo_alternate</span>
                            <p class="text-sm font-semibold text-[#618389]">Kéo thả hoặc nhấn để tải ảnh lên</p>
                            <p class="text-[10px] text-[#618389]/60 uppercase tracking-widest font-bold">JPG, PNG, WEBP (Tối đa 5MB)</p>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section-card">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-primary">payments</span>
                    <h2 class="text-[#111718] dark:text-white text-xl font-bold">Giá &amp; Ưu đãi</h2>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="label-text">Giá vé người lớn (Chính)</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#618389] font-medium">₫</span>
                            <input class="input-field pl-10" placeholder="0" type="text" value="4,500,000" />
                        </div>
                    </div>
                    <div>
                        <label class="label-text">Giảm giá (%)</label>
                        <div class="relative">
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[#618389] font-medium">%</span>
                            <input class="input-field pr-10" max="100" min="0" placeholder="0" type="number" value="0" />
                        </div>
                    </div>
                    <div>
                        <label class="label-text">Giá vé trẻ em</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#618389] font-medium">₫</span>
                            <input class="input-field pl-10" placeholder="0" type="text" value="3,500,000" />
                        </div>
                    </div>
                    <div>
                        <label class="label-text">Giá vé em bé</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#618389] font-medium">₫</span>
                            <input class="input-field pl-10" placeholder="0" type="text" value="0" />
                        </div>
                    </div>
                </div>
                <div class="p-4 bg-primary/5 rounded-2xl border border-primary/10 flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold text-[#618389] uppercase tracking-wider mb-1">Giá hiển thị thực tế (Người lớn)</p>
                        <p class="text-2xl font-black text-primary">4,500,000 VND</p>
                    </div>
                    <span class="material-symbols-outlined text-primary/40 text-4xl">calculate</span>
                </div>
            </section>
            <section class="section-card">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-primary">calendar_month</span>
                    <h2 class="text-[#111718] dark:text-white text-xl font-bold">Lịch trình &amp; Số lượng</h2>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="label-text">Ngày khởi hành</label>
                        <input class="input-field" type="date" value="2023-11-15" />
                    </div>
                    <div>
                        <label class="label-text">Ngày kết thúc</label>
                        <input class="input-field" type="date" value="2023-11-17" />
                    </div>
                    <div>
                        <label class="label-text">Số lượng khách tối đa</label>
                        <input class="input-field" placeholder="20" type="number" value="15" />
                    </div>
                    <div>
                        <label class="label-text">Thời lượng</label>
                        <input class="input-field" placeholder="Ví dụ: 3 ngày 2 đêm" type="text" value="3 ngày 2 đêm" />
                    </div>
                </div>
            </section>
        </div>
        <div class="lg:col-span-5 lg:sticky lg:top-24">
            <div class="flex items-center justify-between mb-4 px-2">
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary text-sm">visibility</span>
                    <p class="text-sm font-bold text-[#111718] dark:text-white uppercase tracking-[0.2em]">XEM TRƯỚC TRỰC TIẾP</p>
                </div>
                <span class="px-2.5 py-1 bg-primary/20 text-primary text-[10px] font-black rounded-full uppercase">Customer View</span>
            </div>
            <div class="bg-white dark:bg-slate-800 rounded-[2rem] overflow-hidden shadow-2xl border border-[#f0f4f4] dark:border-white/10 group transition-all">
                <div class="relative h-72 overflow-hidden bg-[#f0f4f4] dark:bg-slate-900 flex items-center justify-center">
                    <img alt="Preview Image" class="w-full h-full object-cover" src="https://lh3.googleusercontent.com/aida-public/AB6AXuCKSNr77lAiKATSQd4H3kd8nJDOafwTqaexTnwHK7f5k3PcdVSyLM-k1DryO4_aEs8evQepIE_wIFkZocHU-s36kfN9kb5fofBhFxv4DcSSdP2L8KTAq2-lkEcc_rgra__M0sis1NNYWb1MSfSZU4rA111Iag0nbhbbgycoyeno8qC28wEd2JijeNRkHECX64F_Pl96kOgLMmu5Kwc_6kmVx7xiBNN9mHg-7WR4rkAjNvhyjxsyRuarydDd1n0pILUO0MhoKFtSSA" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
                    <div class="absolute top-6 left-6 bg-white/90 dark:bg-black/80 backdrop-blur px-3 py-2 rounded-xl flex items-center gap-1.5 shadow-sm">
                        <span class="material-symbols-outlined text-primary text-base fill-1">star</span>
                        <span class="text-sm font-bold text-[#111718] dark:text-white">New</span>
                        <span class="text-[10px] text-[#618389] uppercase font-bold">(0 đánh giá)</span>
                    </div>
                </div>
                <div class="p-8">
                    <div class="flex items-center gap-2 mb-3">
                        <span class="material-symbols-outlined text-primary text-sm">location_on</span>
                        <span class="text-xs font-bold text-[#618389] uppercase tracking-widest">Hà Giang</span>
                    </div>
                    <h3 class="text-2xl font-extrabold text-[#111718] dark:text-white mb-3 leading-tight">Ha Giang Loop Adventure</h3>
                    <p class="text-sm text-[#618389] dark:text-gray-400 line-clamp-3 mb-8 leading-relaxed">Khám phá vẻ đẹp hùng vĩ của vùng cao nguyên đá Đồng Văn qua hành trình Hà Giang Loop đầy thú vị...</p>
                    <div class="flex items-end justify-between border-t border-[#f0f4f4] dark:border-white/10 pt-6">
                        <div>
                            <p class="text-xs text-[#618389] uppercase font-bold tracking-tighter mb-1">Bắt đầu từ</p>
                            <p class="text-3xl font-black text-primary">4,500,000 <span class="text-sm font-medium">VND</span></p>
                        </div>
                        <button class="bg-primary text-white px-8 py-3.5 rounded-2xl font-bold text-sm transition-all shadow-lg shadow-primary/25">
                            Đặt chỗ ngay
                        </button>
                    </div>
                </div>
            </div>
            <div class="mt-6 p-6 rounded-2xl border-2 border-dashed border-[#dbe4e6] dark:border-white/10 flex items-start gap-4 bg-white/40 dark:bg-slate-800/40">
                <span class="material-symbols-outlined text-primary p-2 bg-primary/10 rounded-lg">tips_and_updates</span>
                <div class="space-y-1">
                    <p class="text-sm font-bold text-[#111718] dark:text-white">Mẹo nhỏ cho bạn</p>
                    <p class="text-xs text-[#618389] leading-relaxed">Sử dụng hình ảnh chất lượng cao và tiêu đề hấp dẫn để tăng tỷ lệ đặt tour lên đến 40%.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="fixed bottom-0 left-0 right-0 md:left-64 bg-white dark:bg-slate-900 border-t border-[#f0f4f4] dark:border-white/10 p-5 md:px-10 shadow-[0_-8px_30px_rgba(0,0,0,0.04)] z-40 transition-all duration-300">
    <div class="max-w-[1440px] mx-auto flex items-center justify-between gap-4">
        <div class="hidden sm:flex items-center gap-3">
            <span class="size-2 bg-green-500 rounded-full animate-pulse"></span>
            <span class="text-xs font-bold text-[#618389] uppercase tracking-widest">Đang chỉnh sửa bản nháp</span>
        </div>
        <div class="flex items-center gap-4 w-full sm:w-auto">
            <a asp-action="Index" class="flex-1 sm:flex-none px-8 py-4 rounded-2xl text-[#111718] dark:text-white font-bold text-sm hover:bg-[#f0f4f4] dark:hover:bg-white/5 transition-all text-center">
                Hủy
            </a>
            <button class="flex-1 sm:flex-none px-10 py-4 rounded-2xl bg-gradient-to-r from-primary to-[#25b9d7] hover:brightness-110 text-white font-extrabold text-sm transition-all shadow-xl shadow-primary/30 flex items-center justify-center gap-2 group">
                Lưu Thay Đổi
                <span class="material-symbols-outlined text-xl group-hover:translate-x-1 transition-transform">arrow_forward</span>
            </button>
        </div>
    </div>
</footer>
