                        Liên Hệ
                    </a>
                </nav>

                <!-- Actions -->
                <div class="flex items-center gap-3">
                    <button id="theme-toggle-public" class="p-2.5 rounded-xl text-slate-400 hover:text-primary hover:bg-slate-100 dark:hover:bg-slate-800 transition-all" aria-label="Toggle Dark Mode">
                        <span class="material-symbols-outlined dark:hidden text-[20px]">dark_mode</span>
                        <span class="material-symbols-outlined hidden dark:block text-[20px]">light_mode</span>
                    </button>
                    <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="hidden sm:flex items-center gap-2 bg-primary hover:bg-primary-dark text-white px-5 py-2.5 rounded-xl text-sm font-bold shadow-lg shadow-primary/25 hover:shadow-primary/40 transition-all active:scale-95">
                        <span class="material-symbols-outlined text-[18px]">login</span>
                        Đăng Nhập
                    </a>
                    <!-- Mobile menu button -->
                    <button id="mobile-menu-btn" class="md:hidden p-2.5 rounded-xl text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-all">
                        <span class="material-symbols-outlined text-[24px]">menu</span>
                    </button>
                </div>
            </div>

            <!-- Mobile Nav -->
            <div id="mobile-menu" class="md:hidden hidden pb-4 border-t border-slate-100 dark:border-slate-800 mt-2">
                <nav class="flex flex-col gap-1 pt-3">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-semibold text-slate-600 dark:text-slate-300 hover:bg-primary/10 hover:text-primary transition-all">
