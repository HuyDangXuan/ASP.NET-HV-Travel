@{
    ViewData["Title"] = "Liên Hệ";
    ViewData["Description"] = "Liên hệ với HV Travel để được tư vấn và hỗ trợ";
}

<!-- Hero Banner -->
<section class="hero-gradient relative overflow-hidden">
    <div class="absolute inset-0 opacity-15">
        <div class="absolute bottom-10 left-20 w-72 h-72 bg-primary/30 rounded-full blur-3xl"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-28 relative z-10 text-center" data-animate="fade-up">
        <span class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md text-white/90 text-xs font-semibold px-4 py-2 rounded-full mb-6 border border-white/10">
            <span class="material-symbols-outlined text-primary text-[16px]">call</span>
            Liên Hệ
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white leading-tight mb-6">
            Hãy <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-cyan-300">Kết Nối</span> Với Chúng Tôi
        </h1>
        <p class="text-lg text-slate-300 max-w-2xl mx-auto">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
    </div>
</section>

<!-- Contact Content -->
<section class="py-20 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-12">

            <!-- Contact Info Cards -->
            <div class="lg:col-span-2 space-y-6" data-animate="slide-left" data-stagger>
                <div class="p-6 rounded-2xl bg-white dark:bg-slate-800 shadow-sm border border-slate-100 dark:border-slate-700 hover:border-primary/30 hover:shadow-lg transition-all group">
                    <div class="flex items-start gap-4">
                        <div class="size-12 shrink-0 rounded-xl bg-primary/10 text-primary flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
                            <span class="material-symbols-outlined text-[24px]">location_on</span>
                        </div>
                        <div>
                            <h3 class="text-sm font-bold text-slate-900 dark:text-white mb-1">Địa Chỉ</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">123 Đường Nguyễn Huệ, Quận 1, TP. Hồ Chí Minh, Việt Nam</p>
                        </div>
                    </div>
                </div>
                <div class="p-6 rounded-2xl bg-white dark:bg-slate-800 shadow-sm border border-slate-100 dark:border-slate-700 hover:border-primary/30 hover:shadow-lg transition-all group">
                    <div class="flex items-start gap-4">
                        <div class="size-12 shrink-0 rounded-xl bg-primary/10 text-primary flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
                            <span class="material-symbols-outlined text-[24px]">call</span>
                        </div>
                        <div>
                            <h3 class="text-sm font-bold text-slate-900 dark:text-white mb-1">Điện Thoại</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400">+84 (28) 3822 9999</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Hotline: 1900 1234</p>
                        </div>
                    </div>
                </div>
                <div class="p-6 rounded-2xl bg-white dark:bg-slate-800 shadow-sm border border-slate-100 dark:border-slate-700 hover:border-primary/30 hover:shadow-lg transition-all group">
                    <div class="flex items-start gap-4">
                        <div class="size-12 shrink-0 rounded-xl bg-primary/10 text-primary flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
                            <span class="material-symbols-outlined text-[24px]">mail</span>
                        </div>
                        <div>
                            <h3 class="text-sm font-bold text-slate-900 dark:text-white mb-1">Email</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400">info&#64;hvtravel.vn</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">booking&#64;hvtravel.vn</p>
                        </div>
                    </div>
                </div>
                <div class="p-6 rounded-2xl bg-white dark:bg-slate-800 shadow-sm border border-slate-100 dark:border-slate-700 hover:border-primary/30 hover:shadow-lg transition-all group">
                    <div class="flex items-start gap-4">
                        <div class="size-12 shrink-0 rounded-xl bg-primary/10 text-primary flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
                            <span class="material-symbols-outlined text-[24px]">schedule</span>
                        </div>
                        <div>
                            <h3 class="text-sm font-bold text-slate-900 dark:text-white mb-1">Giờ Làm Việc</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Thứ 2 - Thứ 6: 8:00 - 18:00</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Thứ 7: 8:00 - 12:00</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Chủ Nhật: Nghỉ</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="lg:col-span-3" data-animate="slide-right">
                <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-8">
                    <h2 class="text-2xl font-extrabold text-slate-900 dark:text-white mb-2">Gửi Tin Nhắn Cho Chúng Tôi</h2>
                    <p class="text-sm text-slate-500 dark:text-slate-400 mb-8">Điền thông tin bên dưới và chúng tôi sẽ liên hệ lại sớm nhất</p>

                    <form id="contact-form" class="space-y-6">
                        <div class="grid sm:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Họ và Tên <span class="text-red-500">*</span></label>
                                <input type="text" placeholder="Nhập họ và tên" required
                                       class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all" />
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Số Điện Thoại <span class="text-red-500">*</span></label>
                                <input type="tel" placeholder="Nhập số điện thoại" required
                                       class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Email <span class="text-red-500">*</span></label>
                            <input type="email" placeholder="Nhập địa chỉ email" required
                                   class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all" />
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Chủ Đề</label>
                            <select class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all">
                                <option>Tư vấn tour du lịch</option>
                                <option>Đặt tour</option>
                                <option>Khiếu nại / Góp ý</option>
                                <option>Hợp tác kinh doanh</option>
                                <option>Khác</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Nội Dung <span class="text-red-500">*</span></label>
                            <textarea rows="5" placeholder="Nhập nội dung tin nhắn..." required
                                      class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all resize-none"></textarea>
                        </div>
                        <button type="submit"
                                class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white px-8 py-3.5 rounded-xl text-sm font-bold shadow-lg shadow-primary/25 hover:shadow-primary/40 transition-all active:scale-95">
                            <span class="material-symbols-outlined text-[18px]">send</span>
                            Gửi Tin Nhắn
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Map Section -->
<section class="bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
        <div class="rounded-2xl overflow-hidden shadow-sm border border-slate-100 dark:border-slate-700" data-animate="scale-in">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.5177!2d106.7!3d10.7769!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTDCsDQ2JzM2LjkiTiAxMDbCsDQyJzAwLjAiRQ!5e0!3m2!1svi!2svn!4v1"
                width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                class="w-full"></iframe>
        </div>
    </div>
</section>

@section Scripts {
<script>
    document.getElementById('contact-form').addEventListener('submit', function(e) {
        e.preventDefault();
        const btn = this.querySelector('button[type="submit"]');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="material-symbols-outlined text-[18px] animate-spin">progress_activity</span> Đang gửi...';
        btn.disabled = true;
        setTimeout(() => {
            btn.innerHTML = '<span class="material-symbols-outlined text-[18px]">check_circle</span> Đã gửi thành công!';
            btn.classList.replace('bg-primary', 'bg-emerald-500');
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.classList.replace('bg-emerald-500', 'bg-primary');
                btn.disabled = false;
                e.target.reset();
            }, 2000);
        }, 1500);
    });
</script>
}
