<script>
    async function toggleCustomerSidebar(row) {
        const sidebar = document.getElementById('customer-detail-sidebar');

        // Nếu click vào row
        if (row) {
            // 1) Remove selection from ALL rows first
            document.querySelectorAll('.customer-row').forEach(r => {
                r.classList.remove('is-selected');
            });
            
            // 2) Add selection to clicked row
            row.classList.add('is-selected');
            
            // Show loading state
            document.getElementById('sidebar-name').innerText = "Đang tải...";
            document.getElementById('sidebar-history-list').innerHTML = '<div class="flex justify-center p-4"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div></div>'; // Spinner
            
            // Open sidebar immediately
             if (sidebar) sidebar.classList.remove('translate-x-full');

            // 3) Fetch Data
            try {
                const id = row.dataset.id;
                const response = await fetch(`/Customers/GetDetails/${id}`);
                if (!response.ok) throw new Error('Network response was not ok');
                
                const data = await response.json();
                const customer = data.customer;
                const history = data.history;

                // 4) Populate Sidebar
                document.getElementById('sidebar-name').innerText = customer.fullName;
                // Use UI Avatars if empty
                document.getElementById('sidebar-avatar').src = customer.avatarUrl || `https://ui-avatars.com/api/?name=${encodeURIComponent(customer.fullName)}`;
                
                // Safe navigation for address
                const city = customer.address ? customer.address.city : 'Unknown';
                document.getElementById('sidebar-location').innerText = city;
                
                const statusEl = document.getElementById('sidebar-status');
                statusEl.innerText = customer.status;
                
                // Format currency
                const spending = customer.stats ? new Intl.NumberFormat('vi-VN').format(customer.stats.totalSpending) : '0';
                document.getElementById('sidebar-spending').innerText = `${spending} ₫`;
                
                const points = customer.stats ? new Intl.NumberFormat('vi-VN').format(customer.stats.loyaltyPoints) : '0';
                document.getElementById('sidebar-points').innerText = points;

                // Status style
                if (customer.status === 'Banned') {
                    statusEl.className = 'text-red-500 font-bold';
                } else {
                    statusEl.className = 'text-emerald-500 font-bold';
                }

                // 5) Populate History
                const historyList = document.getElementById('sidebar-history-list');
                historyList.innerHTML = '';

                if (history.length === 0) {
                    historyList.innerHTML = '<p class="text-center text-sm text-slate-400 py-4">Chưa có lịch sử đặt vé</p>';
                } else {
                    history.forEach(item => {
                        const html = `
                        <div class="group relative flex gap-3 p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors border border-transparent hover:border-slate-200 dark:hover:border-slate-700">
                            <div class="flex flex-col items-center gap-1 mt-1">
                                <div class="w-10 flex flex-col items-center">
                                    <span class="text-[10px] font-bold text-slate-400 uppercase">Th${item.month}</span>
                                    <span class="text-lg font-bold text-slate-900 dark:text-white leading-none">${item.day}</span>
                                </div>
                            </div>
                            <div class="w-px bg-slate-200 dark:bg-slate-700 my-1"></div>
                            <div class="flex-1">
                                <div class="flex justify-between">
                                    <p class="text-sm font-bold text-slate-900 dark:text-white">${item.title}</p>
                                    <span class="text-xs font-semibold text-emerald-600 bg-emerald-50 dark:bg-emerald-900/20 px-1.5 py-0.5 rounded">${item.status}</span>
                                </div>
                                <p class="text-xs text-slate-500 mt-1">
                                    ${item.detail}
                                </p>
                                <div class="flex items-center gap-2 mt-2">
                                     <span class="text-xs font-medium text-slate-500">${item.sub}</span>
                                </div>
                            </div>
                        </div>`;
                        historyList.insertAdjacentHTML('beforeend', html);
                    });
                }

            } catch (error) {
                console.error("Error fetching customer details:", error);
                 document.getElementById('sidebar-name').innerText = "Error loading data";
                 document.getElementById('sidebar-history-list').innerHTML = '<p class="text-center text-red-500 text-sm py-4">Có lỗi xảy ra khi tải dữ liệu.</p>';
            }
            
            return;
        }

        // Nếu gọi không truyền row -> dùng để đóng sidebar (nút close)
        if (sidebar) {
            sidebar.classList.add('translate-x-full');
            // Clear selection when closing
            document.querySelectorAll('.customer-row').forEach(r => {
                r.classList.remove('is-selected');
            });
        }
    }

    function toggleFilterMenu() {
        const menu = document.getElementById('filter-menu');
        menu.classList.toggle('hidden');
    }

    // Close filter menu AND sidebar when clicking outside
    document.addEventListener('click', function (event) {
        // Filter Menu Logic
        const menu = document.getElementById('filter-menu');
        const button = event.target.closest('button[onclick="toggleFilterMenu()"]');
        const insideMenu = event.target.closest('#filter-menu');

        if (!button && !insideMenu && !menu.classList.contains('hidden')) {
            menu.classList.add('hidden');
        }

        // Sidebar Logic
        const sidebar = document.getElementById('customer-detail-sidebar');
        const clickedRow = event.target.closest('.customer-row');
        const insideSidebar = event.target.closest('#customer-detail-sidebar');

        // Only close if NOT clicking a row and NOT inside sidebar and sidebar is currently open
        if (!clickedRow && !insideSidebar && sidebar && !sidebar.classList.contains('translate-x-full')) {
            toggleCustomerSidebar(null);
        }
    });

    function updateSpendingLabel(input) {
        document.getElementById('spending-label').innerText = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(input.value) + "+";
    }

    function updateOrdersLabel(input) {
        document.getElementById('orders-label').innerText = input.value + "+";
    }

    function applyFilters() {
        const params = new URLSearchParams(window.location.search);
        
        // Segments
        params.delete('segments'); 
        document.querySelectorAll('input[name="segments"]:checked').forEach(cb => {
            params.append('segments', cb.value);
        });

        // Spending
        const minSpending = document.getElementById('minSpending').value;
        if (minSpending > 0) params.set('minSpending', minSpending);
        else params.delete('minSpending');

        // Orders
        const minOrders = document.getElementById('minOrders').value;
        if (minOrders > 0) params.set('minOrders', minOrders);
        else params.delete('minOrders');
        
        // Search Query
        const searchInput = document.querySelector('input[name="searchQuery"]');
        if(searchInput && searchInput.value) params.set('searchQuery', searchInput.value);
        else if(searchInput && !searchInput.value) params.delete('searchQuery');
        
        // Sort Order (Preserve)
        const sortOrder = new URLSearchParams(window.location.search).get('sortOrder');
        if(sortOrder) params.set('sortOrder', sortOrder);

        // Reset page
        params.delete('page');

        window.location.href = '@Url.Action("Index")' + '?' + params.toString();
    }

    function applySort(sortOrder) {
        const params = new URLSearchParams(window.location.search);
        params.set('sortOrder', sortOrder);
        window.location.href = '@Url.Action("Index")' + '?' + params.toString();
    }

    function resetFilters() {
        window.location.href = '@Url.Action("Index")';
    }
</script>
