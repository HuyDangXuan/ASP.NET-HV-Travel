    function toggleFilterMenu() {
        const menu = document.getElementById('filter-menu');
        menu.classList.toggle('hidden');
    }
    
    // Close filter menu when clicking outside
    document.addEventListener('click', function(event) {
        const menu = document.getElementById('filter-menu');
        const button = event.target.closest('button[onclick="toggleFilterMenu()"]');
        const insideMenu = event.target.closest('#filter-menu');
        
        if (!button && !insideMenu && !menu.classList.contains('hidden')) {
            menu.classList.add('hidden');
        }
    });

    function resetFilters() {
        // Reset checkboxes
        const checkboxes = document.querySelectorAll('#filter-menu input[type="checkbox"]');
        checkboxes.forEach(cb => cb.checked = false);
        
        // Reset ranges
        const ranges = document.querySelectorAll('#filter-menu input[type="range"]');
        ranges.forEach(range => range.value = 0); // Assuming 0 is Min
    }

